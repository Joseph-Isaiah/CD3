<% if current_user.hospital.nil? %>

  <%= simple_form_for @call, method: :post, url: calls_path do |f| %>

    <%= render "calls/fields/cards", f: f, items: Hospital.all %>

    <%= f.input :gender, as: :radio_buttons, collection: Call::VALID_GENDERS %>

    <%= render "calls/fields/age", f: f %>
    <%= render "calls/fields/pulse", f: f %>
    <%= render "calls/fields/blood_pressure", f: f %>
    <%= render "calls/fields/temperature", f: f %>
    <%= render "calls/fields/spao2", f: f %>

    <div class="categories">
      <% Category.all.each do |category| %>
        <%= link_to category.name, "#", class: "btn btn-primary btn-condition #{category.slug} js-category-filter", "data-category": category.slug %>
      <% end %>
    </div>

    <div class="js-condition-radio-buttons js-category-filter-list">
      <% Condition.all.each do |condition| %>
        <div data-category="<%= condition.category.slug %>"><%= condition.name %></div>
      <% end %>
    </div>
    <%= f.association :condition, as: :radio_buttons, collection: Condition.all %>
    ***********
      <div id="form-type-options"></div>
    <%= f.button :submit, "Send" %>

  <% end %>

<% end %>
